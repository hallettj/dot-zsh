alias ls="ls --color"
alias ack="ack-grep"
alias bell="echo '\a'"
alias beep=bell
alias pg="pgrep -fa"

# Changes to top-level directory of git repository.
alias gtop="cd \$(git rev-parse --show-toplevel)"

alias nm="nmcli nm"
alias con="nmcli con"

# Generate a password
alias mkpass="grep -v '[^a-z]' /usr/share/dict/words | shuf --random-source=/dev/urandom | head -n4 | paste -sd ' '"

# Sends stdin to system clipboard
alias clip="xclip -i -selection clipboard"

alias keycode="xev | grep -A2 --line-buffered '^KeyRelease' | sed -n '/keycode /s/^.*keycode \([0-9]*\).* (.*, \(.*\)).*$/\1 \2/p'"

alias idea="sensible-editor ~/Documents/ideas.markdown"
alias note="if [ -t 0 ]; then; echo '' | vipe .markdown | note; else note; fi"

# Run provisioning scripts for dot files
alias provision="mr -d $HOME run command ansible-playbook -K init.yml"

# tmux
alias tl="tmux list-sessions"
alias ts="tmux new-session -s"
alias ta="tmux attach-session -t"
alias tad="tmux attach-session -d -t"
