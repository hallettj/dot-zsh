alias s='git status'
alias st='git diff --stat'
alias d='git diff'
alias di='git diff --cached'
alias a='git add'
alias ap='git add -p'
alias c='git commit'
alias ca='git commit --amend'
alias h='git reset HEAD'

function e() {
  tmux split-window -h -c "#{pane_current_path}" "sensible-editor $1"
}

function se() {
  tmux split-window -h -c "#{pane_current_path}" "sudo sensible-editor $1"
}
